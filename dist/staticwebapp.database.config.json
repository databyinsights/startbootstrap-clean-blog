{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": { "enabled": true, "path": "/rest" },
    "graphql": { "enabled": false },
    "host": {
      "mode": "production",
      "cors": { "origins": ["*"], "allow-credentials": false },
      "authentication": { "provider": "StaticWebApps" }
    }
  },
  "entities": {
    "Users": {
      "source": "dbo.Users",
      "permissions": [
        { "actions": ["create", "read", "update"], "role": "authenticated" }
      ]
    },
    "Subscribers": {
      "source": "dbo.Subscribers",
      "permissions": [
        { "actions": ["create"], "role": "anonymous" },
        { "actions": ["create", "read"], "role": "authenticated" }
      ]
    },
    "LoginEvents": {
      "source": "dbo.Subscribers",
      "permissions": [
        { "actions": ["create"], "role": "authenticated" }
      ]
    }
  }
}

